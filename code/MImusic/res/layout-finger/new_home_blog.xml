<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/home_header_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbarThumbHorizontal="@drawable/tranfer"
        android:scrollbarThumbVertical="@drawable/tranfer"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/dichvubanchay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_bg"
            android:padding="@dimen/dimen_12dp" >

            <vnp.com.mimusic.view.textview.TextViewBold
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/moithanhvien"
                android:textColor="#3d3d3d"
                android:textSize="@dimen/dimen_16dp" />

            <vnp.com.mimusic.view.textview.TextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/xemtatca"
                android:textColor="#3d3d3d"
                android:textSize="@dimen/dimen_11dp" />
        </RelativeLayout>

        <com.meetme.android.horizontallistview.HorizontalListView
            android:id="@+id/hlvSimpleList"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120dp"
            android:background="@drawable/home_bg"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
             android:layout_height="@dimen/dimen_10dp"
            android:background="@drawable/home_bg"
            android:gravity="center|bottom" >

            <View
                android:layout_width="@dimen/dimen_296dp"
                android:layout_height="2px"
                android:background="#e4e4e4"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>