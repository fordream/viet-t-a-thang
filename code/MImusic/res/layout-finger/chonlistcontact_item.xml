<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/home_item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/home_item_right_control_2"
            android:gravity="center" >

            <ImageView
                android:id="@+id/home_item_img_icon"
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="@dimen/dimen_80dp"
                android:background="@drawable/bangxephang_avatar_example" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp" >

                <TextView
                    android:id="@+id/home_item_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Hoàng Hải Nam"
                    android:textColor="#333333"
                    android:textSize="@dimen/dimen_14dp" />

                <TextView
                    android:id="@+id/home_item_tv_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_3dp"
                    android:singleLine="true"
                    android:text="link dich vu"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_10dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/home_item_tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="mo ta dich vu"
                    android:textColor="#333333"
                    android:textSize="@dimen/dimen_13dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/home_item_right_control_2"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/moidvchonhieunguoi_item_checkbox_selected"
            android:button="@null"
            android:scaleType="fitXY" />
    </RelativeLayout>

</LinearLayout>