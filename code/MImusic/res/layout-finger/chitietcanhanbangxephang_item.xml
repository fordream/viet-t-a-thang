<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_20dp" >

    <ImageView
        android:id="@+id/bangxephang_item_img_icon"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:background="@drawable/dvanybook" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/home_item_img_icon"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_0dp"
        android:paddingRight="@dimen/dimen_3dp" >

        <LinearLayout
            android:id="@+id/ml"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bangxephang_item_soluong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#666699"
                android:textSize="@dimen/dimen_14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="so luong"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ml"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_10dp" >

            <TextView
                android:id="@+id/bangxephang_item_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#336666"
                android:textSize="@dimen/dimen_14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bangxephang_item_tv_listdv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_10dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>