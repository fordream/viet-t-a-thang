<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tintuc_item_tv_stt"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_80dp"
        android:background="#993333"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_13dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/tintuc_item_img_icon"
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tintuc_example" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/home_item_img_icon"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_0dp"
        android:paddingRight="@dimen/dimen_0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_5dp" >

            <TextView
                android:id="@+id/tintuc_item_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Khuyến mãi nhạc trờ iMusicz"
                android:textColor="#336666"
                android:textSize="@dimen/dimen_14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tintuc_item_tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:singleLine="true"
                android:text="27/06/2014"
                android:textColor="#336666"
                android:textSize="@dimen/dimen_10dp" />

            <TextView
                android:id="@+id/tintuc_item_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text="Việc thanh toán cước viễn thông sẽ trở nên dễ dàng, nhanh chóng, thuận tiện hơn với Cổng thanh toán dịch vụ viễn thông trực tuyến của Viettel."
                android:textColor="#336666"
                android:textSize="@dimen/dimen_14dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>