<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/tintuc_item_main"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp" >

        <ImageView
            android:id="@+id/tintuc_item_img_icon"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@drawable/tintuc_example" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_0dp"
            android:paddingRight="@dimen/dimen_0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dimen_5dp" >

                <TextView
                    android:id="@+id/tintuc_item_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Khuyến mãi nhạc trờ iMusicz"
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tintuc_item_tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:singleLine="true"
                    android:text="27/06/2014"
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_10dp" />

                <TextView
                    android:id="@+id/tintuc_item_tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="Việc thanh toán cước viễn thông sẽ trở nên dễ dàng, nhanh chóng, thuận tiện hơn với Cổng thanh toán dịch vụ viễn thông trực tuyến của Viettel."
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_14dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>