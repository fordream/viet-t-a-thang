<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_12dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_5dp"
            android:layout_height="@dimen/dimen_5dp"
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_11dp"
            android:background="@drawable/tintuckhac_point" />

        <vnp.com.mimusic.view.VTTextView
            android:id="@+id/tintuckhac_item_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Quà tặng âm nhạc tháng 12, tuyển tập bài hát nhạc chờ hay nhấy năm"
            android:textColor="#336666"
            android:textSize="@dimen/dimen_14dp" />
    </LinearLayout>

</LinearLayout>