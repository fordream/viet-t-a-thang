<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimen_5dp"
    android:paddingLeft="@dimen/dimen_10dp"
    android:paddingRight="@dimen/dimen_0dp"
    android:paddingTop="@dimen/dimen_5dp" >

    <ImageView
        android:id="@+id/menu_right_item_img_icon"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:background="@drawable/avatar_example" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/menu_right_bnt_moi"
        android:layout_toRightOf="@+id/menu_right_item_img_icon"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_0dp"
        android:paddingRight="@dimen/dimen_3dp" >

        <TextView
            android:id="@+id/menu_right_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="name"
            android:textColor="#336666"
            android:textSize="@dimen/dimen_14dp" />

        <TextView
            android:id="@+id/menu_right_item_tv_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_3dp"
            android:singleLine="true"
            android:text="danh sach dich vu su dung"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/menu_right_bnt_moi"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:background="@drawable/xml_btn_infor"
        android:text="@string/moi"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_13dp" />

</RelativeLayout>