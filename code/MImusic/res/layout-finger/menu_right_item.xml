<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/menurightitem_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/menu_right_item_img_icon"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:background="@drawable/no_avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/menu_right_item_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Trần Hữu Nhật Minh"
                    android:textColor="#333333"
                    android:textSize="@dimen/dimen_15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/menu_right_item_tv_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_3dp"
                    android:singleLine="true"
                    android:text="imuzik | imuzik | imuzik"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_10dp"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/f3f3f3"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menurightitem_main_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55dp"
        android:orientation="horizontal"
        android:visibility="gone" >
    </LinearLayout>

</LinearLayout>