<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_tab"
        android:weightSum="4" >

        <LinearLayout
            android:id="@+id/tab_1"
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_indivicator"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tab_1_img"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:src="@drawable/tab_item_1" />

            <TextView
                android:id="@+id/tab_1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trangchu"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_2"
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_indivicator"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tab_2_img"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:src="@drawable/tab_item_2" />

            <TextView
                android:id="@+id/tab_2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dichvu"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_3"
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_indivicator"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tab_3_img"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:src="@drawable/tab_item_3" />

            <TextView
                android:id="@+id/tab_3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bangxephang"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_4"
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_indivicator"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tab_4_img"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:src="@drawable/tab_item_4" />

            <TextView
                android:id="@+id/tab_4_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timkiem"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_10dp" />
        </LinearLayout>
    </LinearLayout>

    <vnp.com.mimusic.view.HeaderView
        android:id="@+id/tab_headerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </vnp.com.mimusic.view.HeaderView>

</RelativeLayout>