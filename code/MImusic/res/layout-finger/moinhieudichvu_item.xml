<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10dp" >

      <ImageView
            android:id="@+id/home_item_img_icon"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@color/f3f3f3"
            android:padding="@dimen/dimen_10dp"
            android:scaleType="fitXY"
            android:src="@drawable/dvanybook" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/menu_right_detail_checkbox"
            android:layout_toRightOf="@+id/home_item_img_icon"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_0dp"
            android:paddingRight="@dimen/dimen_3dp" >

            <TextView
                android:id="@+id/menu_right_item_tv_name"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Dịch vụ Imuzik"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu_right_item_tv_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:singleLine="true"
                android:text="danh sach dich vu dang su dung"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_10dp"
                android:visibility="gone" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/menu_right_detail_checkbox"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/moidvchonhieunguoi_item_checkbox_selected"
            android:button="@drawable/tranfer"
            android:gravity="center"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/c657180" />

</LinearLayout>