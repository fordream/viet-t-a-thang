<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/moinhieudichvu_item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp" >

            <ImageView
                android:id="@+id/moinhieudichvu_item_icon"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:background="@color/f3f3f3"
                android:padding="@dimen/dimen_10dp"
                android:scaleType="fitXY"
                android:src="@drawable/dvanybook" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/moinhieudichvu_item_checkbox"
                android:layout_toRightOf="@+id/moinhieudichvu_item_icon"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_0dp"
                android:paddingRight="@dimen/dimen_3dp" >

                <TextView
                    android:id="@+id/moinhieudichvu_item_tv_name"
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:singleLine="true"
                    android:text="Dịch vụ Imuzik"
                    android:textColor="#333333"
                    android:textSize="@dimen/dimen_14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/moinhieudichvu_item_checkbox"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/moidvchonhieunguoi_item_checkbox_selected"
                android:button="@drawable/tranfer"
                android:gravity="center"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c657180" />
    </LinearLayout>

</LinearLayout>