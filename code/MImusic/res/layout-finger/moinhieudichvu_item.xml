<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/moinhieudichvu_item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_12dp" >

            <ImageView
                android:id="@+id/moinhieudichvu_item_icon"
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:background="@color/f3f3f3"
                android:padding="@dimen/dimen_10dp"
                android:scaleType="fitXY"
                android:src="@drawable/dvanybook" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/moinhieudichvu_item_checkbox"
                android:layout_toRightOf="@+id/moinhieudichvu_item_icon"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/moinhieudichvu_item_tv_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Dịch vụ Imuzik"
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_15dp"
                    android:textStyle="bold" />

                <vnp.com.mimusic.view.VTTextView
                    android:id="@+id/content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_3dp"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="Dịch vụ Imuzik"
                    android:textColor="#333333"
                    android:textSize="@dimen/dimen_11dp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/moinhieudichvu_item_checkbox"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:background="@drawable/newmoidvchonhieunguoi_item_checkbox_selected"
                android:button="@drawable/tranfer"
                android:gravity="center"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>