<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_12dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/thongtincanhan_top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_12dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp" >

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/no_avatar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <vnp.com.mimusic.view.textview.TextViewLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_3dp"
                        android:text="@string/sodienthoaikhachhang1"
                        android:textColor="#475055"
                        android:textSize="@dimen/dimen_13dp" />

                    <vnp.com.mimusic.view.textview.TextViewMedium
                        android:id="@+id/sdt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="01674537886"
                        android:textColor="#475055"
                        android:textSize="@dimen/dimen_15dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/thongtincanhan_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:gravity="center" >

                <vnp.com.mimusic.view.textview.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dichvu"
                    android:textColor="#475055"
                    android:textSize="@dimen/dimen_11dp" />

                <vnp.com.mimusic.view.textview.TextViewMedium
                    android:id="@+id/dichvu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Anibook"
                    android:textColor="#475055"
                    android:textSize="@dimen/dimen_11dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/thongtincanhan_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:gravity="center" >

                <vnp.com.mimusic.view.textview.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/giacuoc"
                    android:textColor="#475055"
                    android:textSize="@dimen/dimen_11dp" />

                <vnp.com.mimusic.view.textview.TextViewMedium
                    android:id="@+id/giacuoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="1000VNĐ"
                    android:textColor="#475055"
                    android:textSize="@dimen/dimen_11dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/thongtincanhan_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:gravity="center" >

                <vnp.com.mimusic.view.textview.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thoigianban"
                    android:textColor="#475055"
                    android:textSize="@dimen/dimen_11dp" />

                <vnp.com.mimusic.view.textview.TextViewMedium
                    android:id="@+id/time_ban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="2014/12/12"
                    android:textColor="#475055"
                    android:textSize="@dimen/dimen_11dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/thongtincanhan_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:gravity="center" >

                <vnp.com.mimusic.view.textview.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thoigiantrave"
                    android:textColor="#475055"
                    android:textSize="@dimen/dimen_11dp" />

                <vnp.com.mimusic.view.textview.TextViewMedium
                    android:id="@+id/time_trave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="2014/12/12"
                    android:textColor="#475055"
                    android:textSize="@dimen/dimen_11dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/thongtincanhan_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:gravity="center" >

                <vnp.com.mimusic.view.textview.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/trangthai"
                    android:textColor="#475055"
                    android:textSize="@dimen/dimen_11dp" />

                <vnp.com.mimusic.view.textview.TextViewMedium
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Thành công"
                    android:textColor="#475055"
                    android:textSize="@dimen/dimen_11dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>