<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/thongtincanhan_top"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_5dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/no_avatar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dimen_5dp"
                        android:text="@string/sodienthoaikhachhang"
                        android:textColor="#336666"
                        android:textSize="@dimen/dimen_14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="@dimen/dimen_5dp"
                        android:text="01674537886"
                        android:textColor="#336666"
                        android:textSize="@dimen/dimen_14dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/thongtincanhan_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="center"
                android:padding="@dimen/dimen_5dp" >

                <TextView
                    android:layout_width="@dimen/dimen_80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/dichvu"
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_14dp" />

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Anibook"
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_14dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/thongtincanhan_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="center"
                android:padding="@dimen/dimen_5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/giacuoc"
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_14dp" />

                <TextView
                    android:id="@+id/text_bidanh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="1000VNĐ"
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_14dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/thongtincanhan_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="center"
                android:padding="@dimen/dimen_5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thoigianban"
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_14dp" />

                <TextView
                    android:id="@+id/text_ngaysinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="2014/12/12"
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_14dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/thongtincanhan_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="center"
                android:padding="@dimen/dimen_5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thoigiantrave"
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_14dp" />

                <TextView
                    android:id="@+id/text_diachi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="2014/12/12"
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="center"
                android:padding="@dimen/dimen_5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/trangthai"
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Thành công"
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_14dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>