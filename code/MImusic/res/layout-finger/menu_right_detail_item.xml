<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_10dp"
    android:paddingRight="@dimen/dimen_0dp" >

    <ImageView
        android:id="@+id/menu_right_detail_item_img_icon"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/dvanybook" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/menu_right_detail_checkbox"
        android:layout_toRightOf="@+id/menu_right_detail_item_img_icon"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_0dp"
        android:paddingRight="@dimen/dimen_3dp" >

        <TextView
            android:id="@+id/menu_right_detail_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#336666"
            android:textSize="@dimen/dimen_14dp" />

        <TextView
            android:id="@+id/menu_right_detail_item_tv_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_3dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_10dp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/menu_right_detail_checkbox"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/xml_menu_right_check_box"
        android:button="@drawable/tranfer" />

</RelativeLayout>