<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/menurightitem_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_12dp" >

            <ImageView
                android:id="@+id/menu_right_item_img_icon"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/menu_right_detail_checkbox"
                android:layout_toRightOf="@+id/menu_right_item_img_icon"
                android:orientation="vertical" >

                <vnp.com.mimusic.view.textview.TextViewMedium
                    android:id="@+id/menu_right_item_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Há»“ng hoa"
                    android:textColor="#333333"
                    android:textSize="@dimen/dimen_15dp"
                    android:textStyle="bold" />

                <vnp.com.mimusic.view.textview.TextViewLight
                    android:id="@+id/menu_right_item_tv_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_3dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:singleLine="true"
                    android:text="danh sach dich vu dang su dung"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_10dp"
                    android:visibility="gone" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/menu_right_detail_checkbox"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/newmoidvchonhieunguoi_item_checkbox_selected"
                android:button="@drawable/tranfer"
                android:gravity="center"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>