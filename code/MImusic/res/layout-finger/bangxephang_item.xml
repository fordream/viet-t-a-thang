<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_5dp"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/bangxephang_item_tv_stt"
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_80dp"
        android:background="#993333"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_13dp" />

    <ImageView
        android:id="@+id/bangxephang_item_img_icon"
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bangxephang_avatar_example" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/home_item_img_icon"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_0dp"
        android:paddingRight="@dimen/dimen_0dp" >

        <LinearLayout
            android:id="@+id/bangxephang_block_soluong"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bangxephang_item_bg_count"
            android:orientation="vertical"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/bangxephang_item_soluong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="10000"
                    android:textStyle="bold"
                    android:textColor="#99cccc"
                    android:textSize="@dimen/dimen_13dp" />

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_3dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:text="Số lượng"
                    android:textColor="#99cccc"
                    android:textSize="@dimen/dimen_10dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" >

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/bangxephang_item_doanhthu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="TextView"
                        android:textColor="#99cccc"
                        android:textSize="@dimen/dimen_14dp" />

                    <TextView
                        android:id="@+id/home_item_right_control_2_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_3dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="doanhthu"
                        android:textColor="#99cccc"
                        android:textSize="@dimen/dimen_10dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/bangxephang_block_soluong"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_5dp" >

            <TextView
                android:id="@+id/bangxephang_item_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Trần tiến"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_14dp" />

            <TextView
                android:id="@+id/bangxephang_item_tv_listdv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_10dp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>