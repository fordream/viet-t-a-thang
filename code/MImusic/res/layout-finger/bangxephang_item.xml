<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/bangxephang_item_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bangxephang_item_tv_stt"
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="match_parent"
            android:background="@color/red_purple"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_13dp" />

        <ImageView
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:id="@+id/bangxephang_item_img_icon"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bangxephang_avatar_example" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/home_item_img_icon"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_0dp"
            android:paddingRight="@dimen/dimen_0dp" >

            <RelativeLayout
                android:id="@+id/bangxephang_block"
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/bangxephang_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="10000"
                    android:textColor="#959ea8"
                    android:textSize="@dimen/dimen_14dp"
                    android:textStyle="bold" />
                
                <View android:layout_width="1px" android:layout_height="fill_parent" android:background="#f3f3f3"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/bangxephang_block"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bangxephang_item_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Trần tiến"
                    android:textColor="#333739"
                    android:textSize="@dimen/dimen_14dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/bxhSoLuongLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="@string/soluong"
                        android:textColor="#333333"
                        android:textSize="@dimen/dimen_14dp" />

                    <TextView
                        android:id="@+id/chitietsoluong1dichvu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="100"
                        android:textColor="@color/red_purple"
                        android:textSize="@dimen/dimen_14dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bxhDoanhThuLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="@string/doanhthu"
                        android:textColor="#333333"
                        android:textSize="@dimen/dimen_14dp" />

                    <TextView
                        android:id="@+id/chitietdoanhthu1dichvu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="100000 VNĐ"
                        android:textColor="@color/red_purple"
                        android:textSize="@dimen/dimen_14dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/bangxephang_item_tv_listdv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_3dp"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_10dp"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:background="#f3f3f3" />

</LinearLayout>