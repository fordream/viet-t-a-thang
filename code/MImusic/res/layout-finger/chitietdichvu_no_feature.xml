<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chitietdichvu_no_feature_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/f3f3f3"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_10dp" >

    <ImageView
        android:id="@+id/home_item_img_icon"
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_imusiz" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_3dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/home_item_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Dịch vụ Imuzik"
                    android:textColor="#475055"
                    android:textSize="@dimen/dimen_15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chitietdichvu_no_feature_gia_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:text="15.000VNĐ"
                    android:textColor="#a73444"
                    android:textSize="@dimen/dimen_14dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/chitietdichvu_no_feature_gia_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:singleLine="true"
                android:text="giá : 15.000VNĐ"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_10dp"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:id="@+id/chitietdichvu_no_feature_moi"
                android:layout_width="@dimen/dimen_95dp"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/xml_btn_infor"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:padding="@dimen/dimen_5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/chitietdichvu_moi" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:text="@string/moi"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chitietdichvu_no_feature_dangky"
                android:layout_width="@dimen/dimen_95dp"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/xml_btn_dangky"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:padding="@dimen/dimen_5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/chitietdichvu_dangky" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:text="@string/dangky"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_13dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>