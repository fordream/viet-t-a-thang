<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/home_item_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35dp"
        android:background="@drawable/tinkhac_bg"
        android:gravity="center_vertical" >

        <View
            android:layout_width="@dimen/dimen_5dp"
            android:layout_height="match_parent"
            android:background="@drawable/home_item_header_img" />

        <TextView
            android:id="@+id/home_item_header_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_5dp"
            android:singleLine="true"
            android:text="@string/tinkhac"
            android:textColor="#336666"
            android:textSize="@dimen/dimen_14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/home_item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:background="#e7e9ec"
            android:id="@+id/home_item_right_control"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_96dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_item_right_control_1"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_48dp"
                android:background="@drawable/home_controller_img_1"
                android:scaleType="fitXY"
                android:src="@drawable/xml_btn2" />

            <ImageView
                android:id="@+id/home_item_right_control_2"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_48dp"
                android:background="@drawable/home_controller_img_2"
                android:scaleType="fitXY"
                android:src="@drawable/xml_btn2" />
        </LinearLayout>

        <ImageView
            android:id="@+id/home_item_img_icon"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dvanybook" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/home_item_right_control"
            android:layout_toRightOf="@+id/home_item_img_icon"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_0dp"
            android:paddingRight="@dimen/dimen_3dp" >

            <TextView
                android:id="@+id/home_item_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="ten dich vu"
                android:textColor="#336666"
                android:textSize="@dimen/dimen_14dp" />

            <TextView
                android:id="@+id/home_item_tv_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:singleLine="true"
                android:text="link dich vu"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_10dp" />

            <TextView
                android:id="@+id/home_item_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text="mo ta dich vu"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_13dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>