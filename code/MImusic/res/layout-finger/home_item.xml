<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/home_item_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35dp"
        android:background="@drawable/tinkhac_bg"
        android:gravity="center_vertical" >

        <View
            android:layout_width="@dimen/dimen_5dp"
            android:layout_height="match_parent"
            android:background="@drawable/home_item_header_img" />

        <TextView
            android:id="@+id/home_item_header_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_5dp"
            android:singleLine="true"
            android:text="@string/tinkhac"
            android:textColor="#336666"
            android:textSize="@dimen/dimen_14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/home_item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/home_item_right_control"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_96dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#e7e9ec"
            android:orientation="vertical" >

            <LinearLayout
                android:gravity="center"
                android:id="@+id/home_item_right_control_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:orientation="vertical"
                android:scaleType="fitXY"
                android:src="@drawable/xml_btn2" >

                <ImageView
                    android:id="@+id/home_item_right_control_icon"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:background="@drawable/home_dangky_1" />

                <TextView
                    android:id="@+id/home_item_right_control_1_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/dangky"
                    android:textColor="#336666"
                    android:textSize="@dimen/dimen_10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_item_right_control_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:gravity="center"
                android:orientation="vertical"
                android:scaleType="fitXY"
                android:src="@drawable/xml_btn2" >

                <ImageView
                    android:id="@+id/home_item_right_control_2_icon"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:background="@drawable/home_moi_1" />

                <TextView
                    android:id="@+id/home_item_right_control_2_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/moi"
                    android:textColor="#bc7782"
                    android:textSize="@dimen/dimen_10dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/home_item_img_icon"
            android:layout_width="@dimen/dimen_75dp"
            android:layout_height="@dimen/dimen_75dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@color/f3f3f3"
            android:padding="@dimen/dimen_10dp"
            android:scaleType="fitXY"
            android:src="@drawable/dvanybook" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_toLeftOf="@+id/home_item_right_control"
            android:layout_toRightOf="@+id/home_item_img_icon"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_0dp"
            android:paddingRight="@dimen/dimen_3dp" >

            <TextView
                android:id="@+id/home_item_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="ten dich vu"
                android:textColor="#336666"
                android:textSize="@dimen/dimen_14dp" />

            <TextView
                android:id="@+id/home_item_tv_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3dp"
                android:singleLine="true"
                android:text="link dich vu"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/home_item_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3"
                android:maxLines="3"
                android:text="mo ta dich vu"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_13dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>