<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:gravity="center"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_30dp" >

        <LinearLayout
            android:id="@+id/dangky_dialog_main"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:gravity="center"
                android:text="Dang ky dich vu"
                android:textColor="#475055"
                android:textStyle="bold" >

                <TextView
                    android:id="@+id/dangky_dialog_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Dang ky dich vu"
                    android:textColor="#475055"
                    android:textSize="@dimen/dimen_15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/thongbaox"
                    android:visibility="gone"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/dimen_6dp"
                    android:padding="@dimen/dimen_9dp"
                    android:src="@drawable/thongbaox" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@drawable/dangky_line" />

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarThumbHorizontal="@drawable/tranfer"
                android:scrollbarThumbVertical="@drawable/tranfer"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <vnp.com.mimusic.view.VTTextView
                        android:id="@+id/dangky_dialog_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/dimen_15dp"
                        android:text="Dang ky dich vu"
                        android:textColor="#353f45"
                        android:textSize="@dimen/dimen_11dp" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/thongbaofooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:background="@drawable/dangky_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp"
                    android:gravity="center" >

                    <Button
                        android:id="@+id/dangky_dialog_cancel"
                        android:layout_width="@dimen/dimen_90dp"
                        android:layout_height="@dimen/dimen_32dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:background="@drawable/dangky_x1"
                        android:text="@string/huy"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/dimen_12dp" />

                    <Button
                        android:id="@+id/dangky_dialog_register"
                        android:layout_width="@dimen/dimen_90dp"
                        android:layout_height="@dimen/dimen_32dp"
                        android:background="@drawable/dangky_x2"
                        android:text="@string/dangky"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/dimen_12dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>