<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/recomment_icon_bottom_open"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_13dp"
            android:src="@drawable/recomment_bottom_top" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recomment_main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recomment_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:background="#003333"
            android:padding="@dimen/dimen_10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/recomment_close"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/recomment_dialog_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2014/10/22 6PM"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_12dp" />

                <TextView
                    android:id="@+id/dangky_dialog_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_3dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:text="@string/dexuatbanhang"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_13dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/recomment_close"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/recomment_close" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35dp"
            android:background="@drawable/tinkhac_bg"
            android:gravity="center_vertical" >

            <View
                android:layout_width="@dimen/dimen_5dp"
                android:layout_height="match_parent"
                android:background="@drawable/home_item_header_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_5dp"
                android:singleLine="true"
                android:text="@string/dichvubanchay"
                android:textColor="#336666"
                android:textSize="@dimen/dimen_13dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c657180" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100dp"
            android:weightSum="4" >

            <LinearLayout
                android:id="@+id/recomment_dv_1"
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_80dp"
                    android:background="@color/f3f3f3"
                    android:padding="@dimen/dimen_20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dvanybook" />

                <TextView
                    android:id="@+id/dangky_dialog_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#cccccc"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dimen_3dp"
                    android:singleLine="true"
                    android:text="Dịch vụ imuzic"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recomment_dv_2"
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_80dp"
                    android:background="@android:color/white"
                    android:padding="@dimen/dimen_20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dvanybook" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/recomment_bg_1"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dimen_3dp"
                    android:singleLine="true"
                    android:text="Dịch vụ imuzic"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recomment_dv_3"
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_80dp"
                    android:background="@color/f3f3f3"
                    android:padding="@dimen/dimen_20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dvanybook" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#cccccc"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dimen_3dp"
                    android:singleLine="true"
                    android:text="Dịch vụ imuzic"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recomment_dv_4"
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_80dp"
                    android:background="@android:color/white"
                    android:padding="@dimen/dimen_20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dvanybook" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/recomment_bg_1"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dimen_3dp"
                    android:singleLine="true"
                    android:text="Dịch vụ imuzic"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_10dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c657180" />

        <LinearLayout
            android:id="@+id/home_item_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35dp"
            android:background="@drawable/tinkhac_bg"
            android:gravity="center_vertical" >

            <View
                android:layout_width="@dimen/dimen_5dp"
                android:layout_height="match_parent"
                android:background="@drawable/home_item_header_img" />

            <TextView
                android:id="@+id/home_item_header_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_5dp"
                android:singleLine="true"
                android:text="@string/dexuatchoban"
                android:textColor="#336666"
                android:textSize="@dimen/dimen_13dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c657180" />

        <LinearLayout
            android:id="@+id/recomment_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp"
            android:background="@android:color/white"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_5dp"
                android:background="@android:color/white"
                android:orientation="vertical" >
            </LinearLayout>

            <ImageView
                android:id="@+id/recomment_icon_bottom"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/recomment_bottom" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>