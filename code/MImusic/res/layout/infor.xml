<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/infor_bg"
        
             android:scrollbars="none"
            android:scrollbarThumbHorizontal="@drawable/tranfer"
            android:scrollbarThumbVertical="@drawable/tranfer"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/menu_left_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_20dp" >

            <vnp.com.mimusic.view.HeaderView
                android:id="@+id/infor_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </vnp.com.mimusic.view.HeaderView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_225dp"
                android:background="@drawable/cover_bg"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/menu_left_img_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
<RelativeLayout
                    android:id="@+id/xmain"
                    android:layout_width="@dimen/dimen_130dp"
                    android:layout_height="@dimen/dimen_130dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="@dimen/dimen_120dp"
                        android:layout_height="@dimen/dimen_120dp"
                        android:layout_centerInParent="true" >

                        <vnp.com.mimusic.view.CustomImageView
                            android:id="@+id/menu_left_img_avatar"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="2px"
                            android:scaleType="centerCrop"
                            android:src="@drawable/new_no_avatar" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/avatar_example_1_bg" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/menu_left_img_avatar_bg"
                        android:layout_width="@dimen/dimen_120dp"
                        android:layout_height="@dimen/dimen_120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/avatar_bg" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/menu_left_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/xmain"
                    android:layout_marginBottom="@dimen/dimen_15dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:singleLine="true"
                    android:text="HoÃ i Anh (0968678678)"
                    android:textColor="#555d61"
                    android:textSize="@dimen/dimen_16dp" />
              
                <ImageView
                    android:id="@+id/infor_cover_click_change"
                    android:layout_width="@dimen/dimen_44dp"
                    android:layout_height="@dimen/dimen_44dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/xml_btn2"
                    android:padding="@dimen/dimen_11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/infor_edit_corver" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_40dp"
                android:paddingLeft="@dimen/dimen_40dp"
                android:paddingRight="@dimen/dimen_40dp"
                android:paddingTop="@dimen/dimen_40dp" >

                <EditText
                    android:id="@+id/infor_name"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_32dp"
                    android:background="@drawable/infor_edit"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/ten"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:singleLine="true"
                    android:textColor="#727a7e"
                    android:textColorHint="#727a7e"
                    android:textSize="@dimen/dimen_12dp" >
                </EditText>

                <EditText
                    android:id="@+id/infor_didanh"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_32dp"
                    android:layout_marginBottom="@dimen/dimen_25dp"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:background="@drawable/infor_edit"
                    android:gravity="center"
                    android:hint="@string/bidanh"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:singleLine="true"
                    android:textColor="#727a7e"
                    android:textColorHint="#727a7e"
                    android:textSize="@dimen/dimen_12dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_32dp" >

                    <TextView
                        android:id="@+id/infor_ngaysinh"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_32dp"
                        android:background="@drawable/infor_edit"
                        android:gravity="center"
                        android:hint="@string/ngaysinh"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp"
                        android:singleLine="true"
                        android:textColor="#727a7e"
                        android:textColorHint="#727a7e"
                        android:textSize="@dimen/dimen_12dp" />

                    <ImageView
                        android:layout_width="@dimen/dimen_32dp"
                        android:layout_height="@dimen/dimen_32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dimen_10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/infor_date" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/infor_address"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_32dp"
                    android:layout_marginBottom="@dimen/dimen_35dp"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:background="@drawable/infor_edit"
                    android:gravity="center"
                    android:hint="@string/diachi"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:singleLine="true"
                    android:textColor="#727a7e"
                    android:textColorHint="#727a7e"
                    android:textSize="@dimen/dimen_12dp" />

                <Button
                    android:id="@+id/activity_login_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_32dp"
                    android:background="@drawable/infor_save"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/luthaydoi"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_13dp"
                 />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <vnp.com.mimusic.view.LoadingView
        android:id="@+id/loadingView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >
    </vnp.com.mimusic.view.LoadingView>

</RelativeLayout>