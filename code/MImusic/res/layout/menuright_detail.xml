<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slidemenu="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_right_detail_main"
    android:layout_width="@dimen/dimen_250dp"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:scaleType="center" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_45dp" >

        <ImageView
            android:id="@+id/menu_right_detail_img_search"
            android:layout_width="@dimen/dimen_45dp"
            android:layout_height="@dimen/dimen_45dp"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimen_10dp"
            android:scaleType="fitXY"
            android:src="@drawable/menu_right_search" />

        <EditText
            android:id="@+id/menu_right_detail_editext"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_toLeftOf="@+id/menu_right_detail_img_search"
            android:background="@drawable/menu_right_edit"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_5dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_13dp" >
        </EditText>
    </RelativeLayout>

    <vnp.com.mimusic.view.MusicListView
        android:id="@+id/menu_right_detail_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#333333"
        android:dividerHeight="1px" >
    </vnp.com.mimusic.view.MusicListView>

</LinearLayout>