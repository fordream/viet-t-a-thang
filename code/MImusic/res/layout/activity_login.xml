<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/activity_login_splash"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_186dp"
            android:background="@drawable/login_header" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/activity_login_main"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:visibility="visible" >

                <vnp.com.mimusic.view.HeaderView
                    android:id="@+id/activity_login_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" >
                </vnp.com.mimusic.view.HeaderView>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_186dp"
                    android:background="@drawable/login_header" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <vnp.com.mimusic.view.VTTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:gravity="center"
                        android:text="@string/banchuacomatkhau"
                        android:textColor="#336666"
                        android:textSize="@dimen/dimen_13dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" >

                        <vnp.com.mimusic.view.VTTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="MK"
                            android:textColor="#336666"
                            android:textSize="@dimen/dimen_13dp"
                            android:textStyle="bold" />

                        <vnp.com.mimusic.view.VTTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimen_2dp"
                            android:paddingRight="@dimen/dimen_2dp"
                            android:text="@string/gui1"
                            android:textColor="#336666"
                            android:textSize="@dimen/dimen_13dp" />

                        <vnp.com.mimusic.view.VTTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="567"
                            android:textColor="#a73444"
                            android:textSize="@dimen/dimen_13dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="@dimen/dimen_200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="@string/nhapsodienthoai"
                        android:textColor="#336666"
                        android:textSize="@dimen/dimen_13dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/activity_login_number_phone"
                        android:layout_width="@dimen/dimen_200dp"
                        android:layout_height="@dimen/dimen_35dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:background="@drawable/menu_right_edit"
                        android:ems="10"
                        android:hint="phone"
                        android:inputType="number"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/dimen_13dp" />

                    <TextView
                        android:layout_width="@dimen/dimen_200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:text="@string/matkhau"
                        android:textColor="#336666"
                        android:textSize="@dimen/dimen_13dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/activity_login_password"
                        android:layout_width="@dimen/dimen_200dp"
                        android:layout_height="@dimen/dimen_35dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:background="@drawable/menu_right_edit"
                        android:ems="10"
                        android:hint="password"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/dimen_13dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp" >

                        <Button
                            android:id="@+id/activity_login_soantin"
                            android:layout_width="@dimen/dimen_95dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:background="@drawable/xml_btn_dangky"
                            android:singleLine="true"
                            android:text="@string/soantin"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/dimen_13dp" />

                        <Button
                            android:id="@+id/activity_login_btn"
                            android:layout_width="@dimen/dimen_95dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:background="@drawable/xml_btn_infor"
                            android:singleLine="true"
                            android:text="@string/dangnhap"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/dimen_13dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>