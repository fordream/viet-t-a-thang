<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <vnp.com.mimusic.view.HeaderView
        android:id="@+id/chitietcanhanbangxephangtungdichvu_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </vnp.com.mimusic.view.HeaderView>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <vnp.com.mimusic.view.BangXepHangItemView
                android:id="@+id/bangxephangitemview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </vnp.com.mimusic.view.BangXepHangItemView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginTop="@dimen/dimen_15dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45dp"
                        android:background="@color/red_purple"
                        android:orientation="horizontal"
                        android:gravity="center_vertical" >
                		<TextView 
                		    android:layout_width="0dp"
                		    android:layout_weight="0.9"
                		    android:layout_height="match_parent"
                		    android:layout_marginLeft="@dimen/dimen_5dp"
                		    android:paddingLeft="@dimen/dimen_15dp"
                		    android:background="#fff"
                		    android:textColor="@color/red_purple"
                		    android:gravity="center_vertical"
                		    android:text="@string/giaodich"/>
                    </LinearLayout>
					<View 
					    android:layout_width="match_parent"
					    android:layout_height="@dimen/dimen_1dp"
					    android:background="#f3f3f3"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45dp"
                		android:layout_marginLeft="@dimen/dimen_20dp"
                		android:layout_marginRight="@dimen/dimen_20dp" >

                        <TextView
                            android:id="@+id/bangxephang_item_soluong"
                            android:layout_width="@dimen/dimen_200dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/sogiaodichthanhcongtrongthang"
                            android:textColor="#333333"
                            android:textSize="@dimen/dimen_14dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:textStyle="bold"
                            android:text="100"
                            android:textColor="#333333"
                            android:textSize="@dimen/dimen_14dp" />
                    </LinearLayout>
					<View 
					    android:layout_width="match_parent"
					    android:layout_height="@dimen/dimen_1dp"
					    android:background="#f3f3f3"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45dp"
                		android:layout_marginLeft="@dimen/dimen_20dp"
                		android:layout_marginRight="@dimen/dimen_20dp" >

                        <TextView
                            android:layout_width="@dimen/dimen_200dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/sogiaodichthanhcong"
                            android:textColor="#333333"
                            android:textSize="@dimen/dimen_14dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:textStyle="bold"
                            android:text="100"
                            android:textColor="#333333"
                            android:textSize="@dimen/dimen_14dp" />
                    </LinearLayout>
					<View 
					    android:layout_width="match_parent"
					    android:layout_height="@dimen/dimen_1dp"
					    android:background="#f3f3f3"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45dp"
                		android:layout_marginLeft="@dimen/dimen_20dp"
                		android:layout_marginRight="@dimen/dimen_20dp" >

                        <TextView
                            android:layout_width="@dimen/dimen_200dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/sotienhoahongtrongthang"
                            android:textColor="#333333"
                            android:textSize="@dimen/dimen_14dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:textStyle="bold"
                            android:text="100 VNĐ"
                            android:textColor="#333333"
                            android:textSize="@dimen/dimen_14dp" />
                    </LinearLayout>
					<View 
					    android:layout_width="match_parent"
					    android:layout_height="@dimen/dimen_1dp"
					    android:background="#f3f3f3"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45dp"
                		android:layout_marginLeft="@dimen/dimen_20dp"
                		android:layout_marginRight="@dimen/dimen_20dp" >

                        <TextView
                            android:layout_width="@dimen/dimen_200dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/sotienhoahong"
                            android:textColor="#333333"
                            android:textSize="@dimen/dimen_14dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:textStyle="bold"
                            android:text="100 VNĐ"
                            android:textColor="#333333"
                            android:textSize="@dimen/dimen_14dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>