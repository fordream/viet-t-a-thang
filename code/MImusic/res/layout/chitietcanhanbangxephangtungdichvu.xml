<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <vnp.com.mimusic.view.HeaderView
            android:id="@+id/chitietcanhanbangxephangtungdichvu_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </vnp.com.mimusic.view.HeaderView>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <vnp.com.mimusic.view.BangXepHangItemView
                    android:id="@+id/bangxephangitemview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </vnp.com.mimusic.view.BangXepHangItemView>
                
                <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/f3f3f3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:background="@android:color/white"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_45dp"
                            android:background="@color/red_purple"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dimen_5dp"
                                android:layout_weight="0.9"
                                android:background="#fff"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dimen_15dp"
                                android:text="@string/giaodich"
                                android:textColor="@color/red_purple" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_1dp"
                            android:background="#f3f3f3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_45dp"
                            android:layout_marginLeft="@dimen/dimen_20dp"
                            android:layout_marginRight="@dimen/dimen_20dp" >

                            <TextView
                                android:id="@+id/bangxephang_item_soluong"
                                android:layout_width="@dimen/dimen_200dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@string/sogiaodichthanhcongtrongthang"
                                android:textColor="#333333"
                                android:textSize="@dimen/dimen_14dp" />

                            <TextView
                                android:id="@+id/soGDTrongThang"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|center_vertical"
                                android:paddingLeft="@dimen/dimen_5dp"
                                android:text="100"
                                android:textColor="#333333"
                                android:textSize="@dimen/dimen_14dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_1dp"
                            android:background="#f3f3f3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_45dp"
                            android:layout_marginLeft="@dimen/dimen_20dp"
                            android:layout_marginRight="@dimen/dimen_20dp" >

                            <TextView
                                android:layout_width="@dimen/dimen_200dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@string/sogiaodichthanhcong"
                                android:textColor="#333333"
                                android:textSize="@dimen/dimen_14dp" />

                            <TextView
                                android:id="@+id/soGD"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|center_vertical"
                                android:paddingLeft="@dimen/dimen_5dp"
                                android:text="100"
                                android:textColor="#333333"
                                android:textSize="@dimen/dimen_14dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_1dp"
                            android:background="#f3f3f3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_45dp"
                            android:layout_marginLeft="@dimen/dimen_20dp"
                            android:layout_marginRight="@dimen/dimen_20dp" >

                            <TextView
                                android:layout_width="@dimen/dimen_200dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@string/sotienhoahongtrongthang"
                                android:textColor="#333333"
                                android:textSize="@dimen/dimen_14dp" />

                            <TextView
                                android:id="@+id/soHHTrongThang"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|center_vertical"
                                android:paddingLeft="@dimen/dimen_5dp"
                                android:text="100 VNĐ"
                                android:textColor="#333333"
                                android:textSize="@dimen/dimen_14dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_1dp"
                            android:background="#f3f3f3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_45dp"
                            android:layout_marginLeft="@dimen/dimen_20dp"
                            android:layout_marginRight="@dimen/dimen_20dp" >

                            <TextView
                                android:layout_width="@dimen/dimen_200dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@string/sotienhoahong"
                                android:textColor="#333333"
                                android:textSize="@dimen/dimen_14dp" />

                            <TextView
                                android:id="@+id/soHH"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|center_vertical"
                                android:paddingLeft="@dimen/dimen_5dp"
                                android:text="100000 VNĐ"
                                android:textColor="#333333"
                                android:textSize="@dimen/dimen_14dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <vnp.com.mimusic.view.LoadingView
        android:id="@+id/loadingView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </vnp.com.mimusic.view.LoadingView>

</RelativeLayout>